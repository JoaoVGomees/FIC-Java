Exercicio 2


import java.util.*;

public class MyClass {
  public static void main(String args[]) {
      
    Scanner xaxa = new Scanner(System.in);  
    int minhaSenha =  1234;
      
    System.out.println("Digite a senha: ");
    int senha = xaxa.nextInt();

    System.out.println((senha == minhaSenha)
        ? "ACESSO PERMITIDO"
        : "ACESSO NEGADO");

  }
  
}
